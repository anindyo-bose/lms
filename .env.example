# Composey LMS Environment Variables
# Copy to .env.local and update with your values

# ============================================================================
# DATABASE
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=composey
DB_PASSWORD=localdev123
DB_NAME=composey_lms

# ============================================================================
# AUTH SERVICE
# ============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=300
REFRESH_TOKEN_EXPIRY=604800
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false
COOKIE_SAME_SITE=Lax

# ============================================================================
# SESSION
# ============================================================================
SESSION_SECRET=your-session-secret-key
REDIS_URL=redis://localhost:6379

# ============================================================================
# MICRO-FRONTEND URLS (Development)
# ============================================================================
NEXT_PUBLIC_AUTH_WIDGET_URL=http://localhost:3001/dist/auth-widget.js
NEXT_PUBLIC_COURSE_WIDGET_URL=http://localhost:3002/dist/course-management-widget.js
NEXT_PUBLIC_LESSON_WIDGET_URL=http://localhost:3003/dist/lesson-viewer-widget.js
NEXT_PUBLIC_QUIZ_WIDGET_URL=http://localhost:3004/dist/quiz-engine-widget.js
NEXT_PUBLIC_PROGRESS_WIDGET_URL=http://localhost:3005/dist/progress-tracker-widget.js
NEXT_PUBLIC_CHECKOUT_WIDGET_URL=http://localhost:3006/dist/checkout-widget.js

# ============================================================================
# API SERVICE
# ============================================================================
API_BASE_URL=http://localhost:3000
API_SECRET=your-api-secret-key

# ============================================================================
# AUTH SERVICE
# ============================================================================
AUTH_SERVICE_URL=http://localhost:3007
AUTH_SECRET=your-auth-secret-key

# ============================================================================
# PAYMENT SERVICE
# ============================================================================
PAYMENT_SERVICE_URL=http://localhost:3008
STRIPE_SECRET_KEY=sk_test_your_test_key
STRIPE_PUBLIC_KEY=pk_test_your_test_key
STRIPE_WEBHOOK_SECRET=whsec_test_your_webhook_secret
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# ============================================================================
# STORAGE (for video files, images)
# ============================================================================
STORAGE_PROVIDER=s3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=composey-lms-storage
STORAGE_URL_EXPIRY=3600

# ============================================================================
# EMAIL
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@composey.local
SMTP_FROM_NAME=Composey LMS

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
SENTRY_DSN=

# ============================================================================
# SECURITY
# ============================================================================
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
IPFS_WHITELIST=

# ============================================================================
# MONITORING
# ============================================================================
ENABLE_METRICS=true
PROMETHEUS_PORT=9090

# ============================================================================
# APPLICATION
# ============================================================================
NODE_ENV=development
PORT=3000
DEBUG=false

# ============================================================================
# Feature Flags
# ============================================================================
FEATURE_SSO=false
FEATURE_VIDEO_STREAMING=true
FEATURE_LIVE_CLASSES=false
FEATURE_CERTIFICATES=true
