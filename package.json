{
  "name": "composey-lms",
  "version": "0.1.0-dev",
  "description": "Production-grade LMS + e-commerce platform with micro-frontend architecture",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*",
    "apps/widgets/*",
    "services/*",
    "db"
  ],
  "scripts": {
    "dev": "npm run dev:shell & npm run dev:services",
    "dev:shell": "npm run dev --workspace=@composey/shell",
    "dev:widgets": "npm run dev --workspaces --if-present",
    "dev:services": "npm run dev --workspace=@composey/auth-service --workspace=@composey/api-service --workspace=@composey/payment-service --if-present",
    "services:dev": "npm run dev:services",
    "build": "npm run build --workspaces --if-present",
    "build:shell": "npm run build --workspace=@composey/shell",
    "build:widgets": "npm run build --workspace=@composey/auth-widget --workspace=@composey/course-management-widget --workspace=@composey/lesson-viewer-widget --workspace=@composey/quiz-engine-widget --workspace=@composey/progress-tracker-widget --workspace=@composey/checkout-widget --if-present",
    "build:services": "npm run build --workspace=@composey/auth-service --workspace=@composey/api-service --workspace=@composey/payment-service --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:watch": "npm run test:watch --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "test:integration": "cd services/api && npm run test:integration",
    "test:ui": "npm run test:ui --workspace=@composey/shell --if-present",
    "test:lint:skip": "findstr /s /r \"describe.skip it.skip test.skip\" apps services packages || echo No skipped tests found",
    "coverage:check": "node scripts/check-coverage.js",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --max-warnings 0",
    "lint:prettier": "prettier --check .",
    "format": "prettier --write .",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "lighthouse": "cd apps/shell && npm run lighthouse",
    "lighthouse:test": "node scripts/check-lighthouse.js",
    "security:check": "npm audit --audit-level=high || echo Security check complete",
    "quality-gates:win": "powershell -ExecutionPolicy Bypass -File ./scripts/quality-gates.ps1",
    "services:start": "npm run start --workspace=@composey/auth-service --workspace=@composey/api-service --workspace=@composey/payment-service --if-present",
    "db:init": "cd db && npm run migrate:latest",
    "db:bootstrap": "npm run db:init && cd db && npm run seed:run",
    "db:migrate:create": "cd db && npm run migrate:make",
    "db:migrate:latest": "cd db && npm run migrate:latest",
    "db:migrate:rollback": "cd db && npm run migrate:rollback",
    "db:status": "cd db && npm run migrate:status",
    "db:seed": "cd db && npm run seed:run",
    "install:ci": "npm ci"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^11.2.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3",
    "webpack": "^5.105.0"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "pino": "^8.17.2"
  }
}
