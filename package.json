{
  "name": "composey-lms",
  "version": "0.1.0-dev",
  "description": "Production-grade LMS + e-commerce platform with micro-frontend architecture",
  "private": true,
  "license": "MIT",
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "type": "module",
  "scripts": {
    "dev": "pnpm run --parallel dev:shell dev:widgets dev:services",
    "dev:shell": "cd apps/shell && pnpm run dev",
    "dev:widgets": "pnpm run --parallel --filter './apps/widgets/*' dev",
    "dev:services": "pnpm run --parallel --filter './services/*' dev",
    "services:dev": "pnpm run --parallel --filter './services/*' dev",
    "build": "pnpm run --filter './apps/**' --filter './services/**' --filter './packages/**' build",
    "build:shell": "cd apps/shell && pnpm run build",
    "build:widgets": "pnpm run --filter './apps/widgets/*' build",
    "build:services": "pnpm run --filter './services/*' build",
    "test": "pnpm run --filter './apps/**' --filter './services/**' --filter './packages/**' test",
    "test:watch": "pnpm run --filter './apps/**' --filter './services/**' --filter './packages/**' test:watch",
    "test:coverage": "pnpm run --filter './apps/**' --filter './services/**' --filter './packages/**' test:coverage && pnpm run coverage:check",
    "test:integration": "cd services/api && pnpm run test:integration",
    "test:ui": "pnpm run --filter './apps/shell' test:ui",
    "test:lint": "pnpm run test:lint:skip",
    "test:lint:skip": "grep -r 'describe.skip\\|it.skip\\|test.skip\\|xit\\|xdescribe' apps services packages || echo 'No skipped tests found âœ“'",
    "coverage:check": "node scripts/check-coverage.js",
    "lint": "pnpm run --parallel lint:eslint lint:prettier",
    "lint:eslint": "eslint . --ext .ts,.tsx,.js,.jsx --max-warnings 0",
    "lint:prettier": "prettier --check .",
    "format": "prettier --write .",
    "typecheck": "pnpm run --parallel --filter './apps/**' --filter './services/**' --filter './packages/**' typecheck",
    "lighthouse": "cd apps/shell && pnpm run lighthouse",
    "lighthouse:test": "node scripts/check-lighthouse.js",
    "security:check": "pnpm run --parallel security:scan security:audit",
    "security:scan": "npm audit --audit-level=high || true",
    "security:audit": "sonar-scanner -Dsonar.projectKey=composey-lms",
    "db:init": "cd db && pnpm run migrate:latest",
    "db:bootstrap": "pnpm run db:init && cd db && pnpm run seed:run",
    "db:migrate:create": "cd db && pnpm run migrate:make",
    "db:migrate:latest": "cd db && pnpm run migrate:latest",
    "db:migrate:rollback": "cd db && pnpm run migrate:rollback",
    "db:status": "cd db && pnpm run migrate:status",
    "db:seed": "cd db && pnpm run seed:run",
    "install:ci": "pnpm install --frozen-lockfile"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^11.2.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "pino": "^8.17.2"
  }
}
